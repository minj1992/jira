$token = "<your_token>" # Replace with your actual token
$baseUrl = "https://<domain.jira.com>" # Replace with your Jira domain
$triggerReindexUrl = "$baseUrl/rest/api/2/reindex?type=FOREGROUND"

$response = Invoke-RestMethod -Uri $triggerReindexUrl `
                              -Headers @{ "Authorization" = "Bearer $token"; "Accept" = "application/json" } `
                              -Method POST `
                              -ErrorAction Stop

Write-Output "Reindex Triggered. Request ID: $($response.requestId)"
